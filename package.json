{
  "name": "hikari",
  "author": "F E A R",
  "private": true,
  "description": "Hikari is an app for watching anime from your favorite sources",
  "version": "1.0.0",
  "main": "./electron/main.js",
  "type": "module",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "rolldown-vite": "^7.1.16",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron": "^37.6.0",
    "electron-builder": "^26.0.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.example.hikari",
    "productName": "Hikari",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "electron/**/*"
    ],
    "win": {
      "icon": "public/icons/icon.png"
    },
    "asar": true,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
