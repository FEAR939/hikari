{
  "name": "hikari",
  "author": "F E A R",
  "private": true,
  "description": "Hikari is an app for watching anime from your favorite sources",
  "version": "2.4.1",
  "main": "./electron-dist/main.js",
  "type": "module",
  "scripts": {
    "electron:build": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.2",
    "ffprobe-static": "^3.1.0",
    "gql.tada": "^1.8.13",
    "jszip": "^3.10.1",
    "rolldown-vite": "^7.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tsc": "^2.0.4",
    "urql": "^5.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.hikari.app",
    "productName": "Hikari",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "FEAR939",
        "repo": "hikari",
        "releaseType": "release"
      }
    ],
    "asarUnpack": [
      "node_modules/ffprobe-static/binaries/**/*"
    ],
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "electron-dist/**/*"
    ],
    "win": {
      "icon": "public/icons/icon.png"
    },
    "asar": true,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
